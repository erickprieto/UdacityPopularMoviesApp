<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#081c24"
    android:keepScreenOn="true"
    tools:context=".activities.SplashActivity">

    <ImageView
        android:id="@+id/popularMoviesIntroImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/SplashActivity_popularMoviesTextView"
        app:srcCompat="@mipmap/ptmdb293x302"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal|center_vertical"
         />
    <TextView
        android:id="@+id/appLabel_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/popularMoviesIntroImageView"
        android:text="@string/SplashActivity_popularMoviesTextView"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/loadinglabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/appLabel_TextView"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:text="@string/SplashActivity_loadingTextView"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="?android:attr/textColorPrimaryInverse" />


</RelativeLayout>